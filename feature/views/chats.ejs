<html lang="en">

<%- include('defaults/head') %>

<body>

  <%- include('components/header') %>

  <main>
    <article>
      <section class="fluid container">
        <%= users[1].firstName %>
        <%= currentUser %>
        <ul id="chat-list">
          <% if (chats.length < 1) { %>
            <p>You have no chats yet.</p>
          <% }%>
          <% for (let i=0;i < chats.length;i++) { %>
          <li class="chat-item">
            <a href="/chat/<%= chats[i]._id %>">
              <img
                src="http://www.kevmill.com/wp-content/uploads/2019/09/cropped-Kevin-profile-pic-2019-square-small.jpg"
                alt="Rick Buijs">
              <div>
                <p>Chat: <%= chats[i]._id %></p>
                <p class="last-message">Stuur een berichtje naar <%= chats[i].users[1] %>!</p>
              </div>
              <i class="material-icons arrows">arrow_forward_ios</i>
            </a>
          </li>
          <% } %>
        </ul>
      </section>
    </article>
  </main>

  <%- include('components/footer') %>

</body>

</html>